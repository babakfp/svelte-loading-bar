{
    "name": "svelte-loading-bar",
    "version": "2.0.3",
    "description": "A Svelte component for showing a loading bar.",
    "license": "MIT",
    "repository": "github:babakfp/svelte-loading-bar",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && npm run package",
        "preview": "vite preview",
        "prepare": "svelte-kit sync",
        "package": "svelte-kit sync && svelte-package -i src/package && publint",
        "prepublishOnly": "npm run package",
        "format": "prettier -w .",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "peerDependencies": {
        "@sveltejs/kit": ">= 2.5.27",
        "svelte": ">= 5"
    },
    "peerDependenciesMeta": {
        "@sveltejs/kit": {
            "optional": true
        }
    },
    "devDependencies": {
        "@sveltejs/adapter-vercel": "5.4.5",
        "@sveltejs/kit": "2.7.2",
        "@sveltejs/package": "2.3.5",
        "@sveltejs/vite-plugin-svelte": "4.0.0",
        "autoprefixer": "10.4.20",
        "cssnano": "7.0.6",
        "postcss": "8.4.47",
        "postcss-load-config": "6.0.1",
        "prettier": "3.3.3",
        "prettier-plugin-svelte": "3.2.7",
        "prettier-plugin-tailwindcss": "0.6.8",
        "publint": "0.2.11",
        "svelte": "5.0.5",
        "svelte-check": "4.0.5",
        "tailwindcss": "3.4.14",
        "tslib": "2.8.0",
        "typescript": "5.6.3",
        "vite": "5.4.9"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        }
    },
    "types": "./dist/index.d.ts",
    "svelte": "./dist/index.js",
    "type": "module"
}
